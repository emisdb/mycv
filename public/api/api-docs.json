{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Sample API",
        "description": "Topic ideas API"
    },
    "paths": {
        "/topic/{topicId}": {
            "parameters": [
                {
                    "name": "topicId",
                    "description": "The unique identifier of the topic",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "$ref": "#/components/schemas/topicid"
                    }
                }
            ],
            "get": {
                "summary": "Read a topic",
                "responses": {
                    "200": {
                        "description": "The topic corresponding to the provided `topicId`",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/topicid"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No topic found for the provided `topicId`",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/idea/{ideaId}": {
            "parameters": [
                {
                    "name": "ideaId",
                    "description": "The unique identifier of the idea",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "$ref": "#/components/schemas/ideaid"
                    }
                }
            ],
            "get": {
                "summary": "Read an idea",
                "responses": {
                    "200": {
                        "description": "The idea corresponding to the provided `ideaId`",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ideaid"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No topic found for the provided `ideaid`",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "topicid": {
                "description": "The unique identifier of a topic",
                "type": "string"
            },
            "ideaid": {
                "description": "The unique identifier of an idea",
                "type": "string"
            },
            "topic": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "description",
                    "topicid"
                ],
                "properties": {
                    "id": {
                        "$ref": "#/components/schemas/topicid"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "topicid": {
                        "type": "string"
                    }
                }
            },
            "topics":
            {
                "type":"array",
                "items":{
                    "$ref":"#/components/schemas/topicid"
                }
            },
            "idea": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "description",
                    "topic_id"
                ],
                "properties": {
                    "id": {
                        "$ref": "#/components/schemas/ideaid"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "topic_id": {
                        "type": "string"
                    }
                }
            },
            "ideas":
            {
                "type":"array",
                "items":{
                    "$ref":"#/components/schemas/ideaid"
                }
            },
            "Error": {
                "type": "object",
                "required": [
                    "message"
                ],
                "properties": {
                    "message": {
                        "description": "A human readable error message",
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "ApiKey": {
                "type": "apiKey",
                "in": "header",
                "name": "X-Api-Key"
            }
        }
    },
    "security": [
        {
            "ApiKey": []
        }
    ]
}
